@model IEnumerable<TennisTableASP.Models.Series>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Séries";
}
    <p>
        @Html.ActionLink("Créer une série", "Create", null, htmlAttributes: new { @class = "btn btn-succes btn-default" })
    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Denomination)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th></th>
        </tr>
    
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Denomination)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Éditer", "Edit", new { id = item.SerieId }, htmlAttributes: new { @class = "btn btn-succes btn-small" })
                @Html.ActionLink("Supprimer", "Delete", new { id = item.SerieId }, htmlAttributes: new { @class = "btn btn-succes btn-small" })
            </td>
        </tr>
    }
    
    </table>
