@model TennisTableASP.Models.Sexes

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Sexes - Édition";
}
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="GroupeForm">
                @Html.LabelFor(model => model.SexeId, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.TextBoxFor(model => model.SexeId, new { disabled = "disabled" })
            </div>

            <div class="GroupeForm">
                @Html.LabelFor(model => model.Denomination, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Denomination, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Denomination, "", new { @class = "text-danger" })
                </div>
                <div class="actions">
                    <input type="submit" value="Sauver" class="btn btn-succes btn-default" />
                </div>
    }