@model TennisTableASP.Models.Classements
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Classements - Édition";
}
    
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })    
                <div class="GroupeForm">
                    @Html.LabelFor(model => model.ClassementId, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.TextBoxFor(model => model.ClassementId, new { disabled = "disabled" })
                </div>
                <div class="GroupeForm">
                    @Html.LabelFor(model => model.Classement, htmlAttributes: new { @class = "control-label col-md-2" })
                    @Html.EditorFor(model => model.Classement, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Classement, "", new { @class = "text-danger" })
                </div>
                <div class="actions">
                    <input type="submit" value="Sauver" class="btn btn-succes btn-default" />
                </div>
    }
